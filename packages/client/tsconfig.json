{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowJs": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react-jsx",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "incremental": true,
        "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}