{
    "compilerOptions": {
        "outDir": "./dist/cjs",
        "target": "ES2020",
        "module": "CommonJS",
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "prisma",
        "node_modules",
        "dist"
    ]
}